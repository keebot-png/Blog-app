<h1>Allow users to create comments, posts and a likes counter</h1>

<%= form_with model: @post, url:user_posts_path do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title, placeholder: 'Title' %>
    </div>
    <div>
        <%= form.label :text %><br>
        <%= form.text_area :text, placeholder: 'Description of post' %>   
    </div>
    <%= form.submit %>
<% end %>