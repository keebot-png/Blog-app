<body>
    <%= render "partials/user_container", user: @users_find %>
    <% @posts.each do |post| %>
        <%= render "partials/post_container", post: post %>
        <% post.comments.each do |comment| %>
            <article class="comments-box">
            <%user = User.find_by(id: comment.author_id).name %>
            <p><strong><%=user%>: <%= comment.text %></strong></p>
        </article>
        <% end %>
        <%= link_to "/users/#{@users_find.id}/posts/#{post.id}" do %>
        <button>Pagination</button>
        <% end %>
    <% end %>
</body>